{
  "name": "trescudo-website",
  "version": "1.0.0",
  "description": "Trescudo Cybersecurity Website - Static Site with Eleventy",
  "scripts": {
    "start": "eleventy --serve",
    "build": "eleventy",
    "build:css": "npm run build:css:purge && npm run build:css:minify",
    "build:css:purge": "purgecss --config ./purgecss.config.js",
    "build:css:minify": "cleancss -o assets/css/style.min.css assets/css/style.css",
    "build:fontawesome": "node ./scripts/subset-fontawesome.js",
    "build:prod": "npm run build && npm run build:css && npm run build:fontawesome"
  },
  "keywords": [
    "cybersecurity",
    "static-site",
    "eleventy"
  ],
  "author": "Trescudo",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "clean-css-cli": "^5.6.3",
    "glob": "^11.0.3",
    "purgecss": "^5.0.0",
    "sass": "^1.69.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
